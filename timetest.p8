dt = {
 s=0,
 m=0,
 h=0,
 d=0,
 mo=0,
 y=0,
 tostring=
 function(self)
  return self.s..":"
    ..self.m..":"
    ..self.h.." "
    ..self.d.."-"
    ..self.mo.."-"
    ..self.y
 end,
 
 from=function(self, obj)
  self.s = obj.s
  self.m = obj.m
  self.h = obj.h
  self.d = obj.d
  self.mo = obj.mo
  self.y = obj.y
 end,
 save=function(self)
  dset(1,self:dat())
  dset(2,self:tim())
  dset(0,1)
 end,
 read=function(self)
  dat=dget(1)
  tim=dget(2)
  dat/=10
  self.y = flr(dat)
  dat = (dat-self.y)*100
  self.mo= flr(dat)
  dat = (dat-self.mo)*100
  self.d=flr(dat)
  tim/=100
  self.h=flr(tim)
  tim = (tim - self.h)*100
  self.m=flr(tim)
  tim = (tim-self.m)*100
  self.s = flr(tim)
  
 end,
 dat=function(self)
  return self.y*10+self.mo/10+self.d/1000
 end,
 tim=function(self)
  return self.h*100+self.m+self.s/100
 end,
 tdiff=function(self,obj)
  return self:tim()-obj:tim()
 end,
 ddiff=function(self,obj)
  return self:dat()-obj:dat()
 end
 
}


function dt:new(obj)
   obj = obj or {}
   setmetatable(obj, {__index = self})
   return obj
end
