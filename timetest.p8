-- check hit on top or bottom
function hity(x,y,w,h) --check hit on top or bottom
 hit=false
 for i=x,x+w do
  tile1=mget(i/8,y/8)
  tile2=mget(i/8,(y+h)/8)
  if (fget(tile1,0)) then
    hit=true
  elseif (fget(tile2,0)) then
    hit=true
  end
 end
 return hit
end
--check hit on sides
function hitx(x,y,w,h) --check hit on sides
 hit = false
 for i=y,y+h do
  tile1=mget(x/8,i/8)
  tile2=mget((x+w)/8,i/8)
  if (fget(tile1,0)) then
    hit=true
  elseif (fget(tile2,0)) then
    hit=true
  end
 end
 return hit
end


