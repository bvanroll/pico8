 read=function(self)
  self.s=dget(1)
  self.m=dget(2)
  self.h=dget(3)
  self.d=dget(4)
  self.mo=dget(5)
  self.y=dget(6)
 end,
 dat=function(self)
  return self.y*10+self.mo/10+self.d/1000
 end,
 tim=function(self)
  return self.h*100+self.m+self.s/100
 end,
 tdiff=function(self,obj)
  return self:tim()-obj:tim()
 end,
 ddiff=function(self,obj)
  return self:dat()-obj:dat()
 end
 
}


function dt:new(obj)
   obj = obj or {}
   setmetatable(obj, {__index = self})
   return obj
end
