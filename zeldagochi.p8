    ..self.mo.."-"
    ..self.y
 end,
 
 from=function(self, obj)
  self.s = obj.s
  self.m = obj.m
  self.h = obj.h
  self.d = obj.d
  self.mo = obj.mo
  self.y = obj.y
 end,
 save=function(self)
--  dset(1,self:dat())
